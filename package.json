{
  "name": "ccd-definition-processor",
  "version": "1.0.0",
  "description": "Utility to help creating Reform ET CCD definitions for England and Wales",
  "dependencies": {
    "@hmcts/nodejs-healthcheck": "1.8.0",
    "@hmcts/properties-volume": "0.0.14",
    "codeceptjs": "^3.4.1",
    "config": "^3.3.9",
    "eslint-plugin-codeceptjs": "^1.3.0",
    "express": "^4.18.2",
    "glob": "^8.0.3",
    "json-stringify-pretty-compact": "^3.0.0",
    "lodash": "^4.17.21",
    "matcher": "4.0.0",
    "minimist": "^1.2.7",
    "moment": "^2.29.4",
    "prettier": "^3.0.1",
    "pretty-quick": "^3.1.3",
    "puppeteer": "^13.5.0",
    "xlsx": "^0.18.5",
    "xlsx-populate": "^1.21.0"
  },
  "devDependencies": {
    "eslint": "^8.32.0",
    "eslint-plugin-mocha": "^10.1.0",
    "html_codesniffer": "^2.5.1",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3"
  },
  "scripts": {
    "lint": "eslint src",
    "test": "mocha ./src/test --timeout 20000",
    "test:functional": "codeceptjs run --steps -c src/test/functional/codecept.conf.js --grep @pipeline --reporter mochawesome",
    "lint-fix": "eslint src --fix",
    "json2xlsx": "node ./bin/json2xlsx",
    "xlsx2json": "node ./bin/xlsx2json",
    "generate-json": "yarn xlsx2json -D ./definitions/json -i ./definitions/xlsx/ccd-config-base.xlsx && pretty-quick --pattern 'definitions/**/json/**.json'",
    "generate-excel-local": "node json-env.js local",
    "generate-excel-cftlib": "node json-env.js cftlib",
    "generate-excel-preview": "node json-env.js preview",
    "generate-excel-demo": "node json-env.js demo",
    "generate-excel-aat": "node json-env.js aat",
    "generate-excel-perftest": "node json-env.js perftest",
    "generate-excel-prod": "node json-env.js prod",
    "generate-excel-ithc": "node json-env.js ithc",
    "generate-excel": "yarn json2xlsx -D ./definitions/json -o ./definitions/xlsx/et-englandwales-ccd-config-${ET_ENV:-base}.xlsx",
    "generate-excel-all": "yarn generate-excel-local && yarn generate-excel-preview && yarn generate-excel-demo && yarn generate-excel-aat && yarn generate-excel-prod"
  },
  "packageManager": "yarn@3.5.0"
}
